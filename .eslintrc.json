{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "node": true,
        "es2017": true,
        "jest": true
    },
    "extends": [
        "plugin:@next/next/recommended",
        "plugin:react/recommended",
        "eslint:recommended",
        "next/core-web-vitals",
        "standard",
        "next",
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": 2020,
        "ecmaFeatures": {
            "jsx": true
        },
        "sourceType": "module"
    },
    "globals": {
        "document": "readonly",
        "navigator": "readonly",
        "window": "readonly",
        "JSX": "readonly",
        "React": "readonly",
        "fetch": true
    },
    "plugins": ["promise"],
    "settings": {
        "import/resolver": {
            "node": {
                "paths": ["components", "lib", "pages", "types", "."]
            }
        }
    }
}
