{
    "compilerOptions": {
        "baseUrl": ".",
        "checkJs": false,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "target": "es2020",
        "module": "es2015",
        "paths": {
            "@/components/*": [
                "components/*"
            ],
            "@/styles/*": [
                "styles/*"
            ],
            "@/pages/*": [
                "pages/*"
            ]
        }
    },
    "exclude": [
        "dist",
        "node_modules",
        "build",
        ".vscode",
        ".next",
        "coverage",
        ".npm",
        ".yarn"
    ],
    "include": [
        "."
    ],
    "typeAcquisition": {
        "enable": true,
        "include": [
            "react",
            "react-dom"
        ]
    }
}
